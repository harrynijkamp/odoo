<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_partner_form_view_inherit_custom">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="function" position="before">
                <field name="gender"/>
            </field>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Tag Filter" name="tag_filter" domain="[]" help="Filter contacts by tags">
                    <field name="category_id" widget="many2many_tags" placeholder="Select tags..."/>
                </filter>
            </xpath>
        </field>
    </record>
</odoo>